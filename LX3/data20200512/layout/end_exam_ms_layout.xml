<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="@dimen/end_exam_dialog_width"
    android:layout_height="@dimen/end_exam_dialog_height">

    <edan.am57.bx4.patient.EndEXamBtn
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/btn_end_exam"
        android:text="@string/patient_end_exam"
        android:textSize="22px"
        android:layout_width="@dimen/end_exam_dialog_btn_width"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="35dp"
        android:layout_height="60px" />

    <edan.am57.bx4.patient.EndEXamBtn
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/btn_edit_current"
        android:text="@string/patient_edit_current"
        android:textSize="22px"
        android:layout_width="@dimen/end_exam_dialog_btn_width"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_end_exam"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:layout_height="60px" />

    <edan.am57.bx4.patient.EndEXamBtn
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/btn_cancel"
        android:text="@string/common_cancel"
        android:textSize="22px"
        android:layout_width="@dimen/end_exam_dialog_btn_width"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_edit_current"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:layout_height="60px" />

    <edan.am57.bx4.patient.EndEXamBtn
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/btn_new_exam"
        android:text="@string/patient_new_exam"
        android:textSize="22px"
        android:layout_width="@dimen/end_exam_dialog_btn_width"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_cancel"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:layout_height="60px" />

    <CheckBox
        style="@style/main_screen_checkbox_style"
        android:id="@+id/chk_same_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_new_exam"
        android:layout_alignStart="@+id/btn_new_exam"
        android:layout_marginTop="40dp"
        android:textSize="22px"
        android:paddingLeft="5dp"
        android:alpha="0.6"
        android:text="@string/patient_same_patient"/>
</RelativeLayout>
