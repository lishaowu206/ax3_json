<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_screen_tab_content"
    android:orientation="vertical"
    android:gravity="left"
    android:paddingTop="20dp"
    android:paddingLeft="30dp">

    <CheckBox
        style="@style/main_screen_checkbox_style"
        android:id="@+id/bodymark_general_unfrozen_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="@string/bodymark_general_unfrozen"/>
    <CheckBox
        style="@style/main_screen_checkbox_style"
        android:id="@+id/bodymark_general_unfreeze_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:text="@string/bodymark_general_unfreeze"/>
</LinearLayout>