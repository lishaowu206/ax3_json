<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/exam_area_twopage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/transducer_ts_page_indicator_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/exam_page1_dot"
            android:layout_width="@dimen/transducer_ts_page_indicator_size"
            android:layout_height="@dimen/transducer_ts_page_indicator_size"
            android:layout_marginLeft="@dimen/transducer_ts_page_indicator_spacing"
            android:layout_marginRight="@dimen/transducer_ts_page_indicator_spacing"
            android:layout_marginTop="@dimen/transducer_ts_page_indicator_margin_bottom"
            android:layout_marginBottom="@dimen/transducer_ts_page_indicator_margin_bottom"
            android:background="@drawable/touch_screen_page_indicator_selector"/>

        <View
            android:id="@+id/exam_page2_dot"
            android:layout_width="@dimen/transducer_ts_page_indicator_size"
            android:layout_height="@dimen/transducer_ts_page_indicator_size"
            android:layout_marginLeft="@dimen/transducer_ts_page_indicator_spacing"
            android:layout_marginRight="@dimen/transducer_ts_page_indicator_spacing"
            android:layout_marginTop="@dimen/transducer_ts_page_indicator_margin_bottom"
            android:layout_marginBottom="@dimen/transducer_ts_page_indicator_margin_bottom"
            android:background="@drawable/touch_screen_page_indicator_selector"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/transducer_exam_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/transducer_ts_exams_margin_right"
        android:layout_marginStart="@dimen/transducer_ts_exams_margin_left">
    </android.support.v4.view.ViewPager>
</LinearLayout>
