<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/main_screen_big_text_style"
        android:id="@+id/usr_def_exam_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="top"/>

    <edan.asp.inputmethod.view.ImEditText
        style="@style/main_screen_edit_style"
        android:id="@+id/usr_def_exam_edit"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_below="@+id/usr_def_exam_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"/>

    <Button
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/btn_ok"
        android:layout_below="@+id/usr_def_exam_edit"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/common_ok"/>

    <Button
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/btn_cancel"
        android:layout_below="@+id/usr_def_exam_edit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/common_cancel"/>

</RelativeLayout>