<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="2dp">
    <edan.asp.view.RecycleImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
		android:background="@drawable/recycler_item_bg"
        android:scaleType="fitCenter"
		android:adjustViewBounds="true"
		android:padding="@dimen/gridview_item_border_padding"/>

	<View
		android:id="@+id/select_view"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginBottom="2dp"
		android:layout_marginEnd="2dp"
		android:layout_gravity="bottom|end"
		android:scaleType="center"
		android:background="@drawable/thumbnail_selected"
		android:visibility="invisible"/>

	<View
		android:id="@+id/clip_view"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginLeft="44dp"
		android:layout_marginBottom="2dp"
		android:layout_gravity="bottom|start"
		android:scaleType="center"
		android:background="@drawable/thumbnail_clip"
		android:alpha="0.6"
		android:visibility="invisible"/>

    <TextView
        android:id="@+id/imageIndex"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
		android:gravity="center"
        android:layout_gravity="bottom|start"
        android:background="@drawable/thumbnail_image_index_bg"
        android:textColor="#e6e6e6"
		android:visibility="invisible"/>
	<View
		android:id="@+id/saving"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:focusable="true"
		android:background="@drawable/tempclip"
		android:scaleType="fitCenter"
		android:adjustViewBounds="true"
		android:clickable="false"
		android:visibility="invisible"/>

</FrameLayout>
