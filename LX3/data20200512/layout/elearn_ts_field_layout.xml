<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="180dp">
    <android.support.v7.widget.RecyclerView
        android:layout_margin="20dp"
        android:id="@+id/elearn_field_list_rv"
        android:layout_alignParentStart="true"
        android:layout_width="@dimen/elearn_field_list_width"
        android:orientation="vertical"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_marginBottom="@dimen/elearn_edge_tb_interval"
        android:layout_marginEnd="@dimen/elearn_edge_rl_interval"
        android:paddingStart="@dimen/elearn_edge_rl_interval"
        android:paddingEnd="@dimen/elearn_edge_rl_interval"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/elearn_field_list_rv"
        android:weightSum="5"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/elearn_part_height">
            <LinearLayout
                android:id="@+id/elearn_part_dotview"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/touch_screen_page_indicator_height"
                android:gravity="center"
                android:layout_gravity="bottom">
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/elearn_part_viewpage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_height="@dimen/touch_screen_button_frame"
            android:layout_width="match_parent"
            android:background="@color/touch_screen_tab_content_sep"
            android:layout_marginTop="@dimen/image_ts_button_spacing_half_vertical"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/elearn_section_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/elearn_section_viewpage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/elearn_section_dotview"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/touch_screen_page_indicator_height"
                android:gravity="center"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>