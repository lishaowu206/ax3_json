<edan.am57.bx4.elearn.TsEdanLearnMainLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp">
    <edan.am57.bx4.elearn.NoScrollViewPager
        android:id="@+id/elearn_view_pager"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">
    </edan.am57.bx4.elearn.NoScrollViewPager>

    <RelativeLayout
        android:id="@+id/elearn_button_rl"
        android:layout_marginStart="@dimen/touch_screen_tab_frame"
        android:layout_marginEnd="@dimen/touch_screen_tab_frame"
        android:layout_marginBottom="@dimen/touch_screen_tab_frame"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/bt_back"
            style="@style/touch_screen_oneshot_button"
            android:layout_height="@dimen/touch_screen_button_small_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/elearn_edge_tb_interval"
            android:layout_marginStart="@dimen/elearn_edge_rl_interval"
            android:clickable="true"
            android:visibility="invisible"
            android:text="@string/el_back"/>

        <Button
            android:id="@+id/bt_exit"
            style="@style/touch_screen_oneshot_button"
            android:layout_height="@dimen/touch_screen_button_small_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/elearn_edge_tb_interval"
            android:layout_marginEnd="@dimen/elearn_edge_rl_interval"
            android:clickable="true"
            android:text="@string/common_exit"/>
    </RelativeLayout>
</edan.am57.bx4.elearn.TsEdanLearnMainLayout>