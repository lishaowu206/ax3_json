<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/utility_dlg_layout_style"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:id="@+id/view_divider"
        android:layout_width="1dp"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"
        android:background="@color/measure_mini_report_sep"
        android:visibility="visible"/>
    <View
        android:layout_width="1dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:background="@color/measure_mini_report_sep"
        android:visibility="visible"/>

    <include
        layout="@layout/util_ms_util_top_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/util_ms_bottom_area"
        android:layout_below="@+id/util_ms_top_area">

        <TextView
            style="@style/utility_title_text_style"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/main_screen_setup_title"
            android:text="@string/feature_setup"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:layout_below="@+id/main_screen_setup_title">
            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/setup_system_btn"
                android:layout_centerHorizontal="true"
                android:text="@string/setup_system"/>

            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/setup_screen_btn"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/setup_system_btn"
                android:text="@string/feature_screen_setup"/>

            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/setup_connectivity_btn"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/setup_screen_btn"
                android:text="@string/setup_connectivity"/>
        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/util_ms_util_bottom_layout"/>

</RelativeLayout>
