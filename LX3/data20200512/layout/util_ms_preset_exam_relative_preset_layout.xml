<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/general_text_style"
        android:id="@+id/exam_measure_spinner_title"
        android:layout_width="@dimen/util_preset_exam_bcm_text_width"
        android:layout_height="@dimen/util_preset_exam_bcm_text_height"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/util_preset_exam_bcm_text_left_margin"
        android:text="@string/feature_measure"/>

    <edan.am57.bx4.common.widget.CustomSpinner
        style="@style/main_screen_spinner_style"
        android:id="@+id/exam_measure_spinner"
        android:layout_width="@dimen/util_preset_exam_bcm_spinner_width"
        android:layout_height="@dimen/util_preset_exam_bcm_spinner_height"
        android:layout_toEndOf="@+id/exam_measure_spinner_title"
        android:layout_alignTop="@+id/exam_measure_spinner_title"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"/>

    <TextView
        style="@style/general_text_style"
        android:id="@+id/exam_comments_spinner_title"
        android:layout_width="@dimen/util_preset_exam_bcm_text_width"
        android:layout_height="@dimen/util_preset_exam_bcm_text_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/exam_measure_spinner_title"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/util_preset_exam_bcm_text_left_margin"
        android:text="@string/feature_comment"/>

    <edan.am57.bx4.common.widget.CustomSpinner
        style="@style/main_screen_spinner_style"
        android:id="@+id/exam_comments_spinner"
        android:layout_width="@dimen/util_preset_exam_bcm_spinner_width"
        android:layout_height="@dimen/util_preset_exam_bcm_spinner_height"
        android:layout_toEndOf="@+id/exam_comments_spinner_title"
        android:layout_alignTop="@+id/exam_comments_spinner_title"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"/>

    <TextView
        style="@style/general_text_style"
        android:id="@+id/exam_bodymark_spinner_title"
        android:layout_width="@dimen/util_preset_exam_bcm_text_width"
        android:layout_height="@dimen/util_preset_exam_bcm_text_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/exam_comments_spinner_title"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/util_preset_exam_bcm_text_left_margin"
        android:text="@string/feature_body_mark"/>

    <edan.am57.bx4.common.widget.CustomSpinner
        style="@style/main_screen_spinner_style"
        android:id="@+id/exam_bodymark_spinner"
        android:layout_width="@dimen/util_preset_exam_bcm_spinner_width"
        android:layout_height="@dimen/util_preset_exam_bcm_spinner_height"
        android:layout_toEndOf="@+id/exam_bodymark_spinner_title"
        android:layout_alignTop="@+id/exam_bodymark_spinner_title"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"/>

    <TextView
        style="@style/general_text_style"
        android:id="@+id/exam_patientinfo_spinner_title"
        android:layout_width="@dimen/util_preset_exam_bcm_text_width"
        android:layout_height="@dimen/util_preset_exam_bcm_text_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/exam_bodymark_spinner_title"
        android:layout_marginTop="50dp"
        android:layout_marginStart="@dimen/util_preset_exam_bcm_text_left_margin"
        android:text="@string/exam_preset_patient_info"/>

    <edan.am57.bx4.common.widget.CustomSpinner
        style="@style/main_screen_spinner_style"
        android:id="@+id/exam_patientinfo_spinner"
        android:layout_width="@dimen/util_preset_exam_bcm_spinner_width"
        android:layout_height="@dimen/util_preset_exam_bcm_spinner_height"
        android:layout_toEndOf="@+id/exam_patientinfo_spinner_title"
        android:layout_alignTop="@+id/exam_patientinfo_spinner_title"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"/>

</merge>
