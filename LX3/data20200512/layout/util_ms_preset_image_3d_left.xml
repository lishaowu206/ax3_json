<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customSpinner="http://schemas.android.com/apk/res-auto"
    android:layout_width="530dp"
    android:layout_height="match_parent"
    android:background="@color/main_screen_tab_content_bg"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/preset_3d_general_settings_tv"
        style="@style/utility_preset_image_text"
        android:layout_alignParentTop="true"
        android:text="@string/para_3d_general_settings" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_image_type_spinner"
        android:text="@string/para_3d_image_type" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_general_settings_tv"
        style="@style/utility_preset_image_spinner"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        customSpinner:entries="@array/image_preset_3d_image_type_options" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_scan_angle_spinner"
        android:text="@string/para_3d_scan_angle_full" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_scan_angle_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_image_type_spinner"/>

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_quality_spinner"
        android:text="@string/para_3d_quality" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_quality_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_scan_angle_spinner"
        customSpinner:entries="@array/volume_quality" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_smooth_spinner"
        android:text="@string/para_3d_mpr_slice_smooth" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_smooth_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_quality_spinner"
        customSpinner:entries="@array/volume_smooth"/>

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_zoom_spinner"
        android:text="@string/para_3d_zoom" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_zoom_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_smooth_spinner"
        customSpinner:entries="@array/volume_zoom"/>

    <TextView
        android:id="@+id/preset_3d_review_mode_tv"
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_review_mode_spinner"
        android:text="@string/para_3d_review_mode" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_review_mode_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_zoom_spinner"
        customSpinner:entries="@array/volume_review_mode"/>

    <TextView
        android:id="@+id/preset_3d_volume_settings_tv"
        style="@style/utility_preset_image_text"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/preset_3d_review_mode_spinner"
        android:layout_alignStart="@+id/preset_3d_general_settings_tv"
        android:text="@string/para_3d_volume_settings" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_mpr_tint_spinner"
        android:text="@string/para_3d_mpr_tint" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_mpr_tint_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_volume_settings_tv"
        customSpinner:entries="@array/mpr_tint"/>

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_vol_tint_spinner"
        android:text="@string/para_3d_vol_tint" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_vol_tint_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_mpr_tint_spinner"
        customSpinner:entries="@array/volume_tint"/>

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_vol_layout_spinner"
        android:text="@string/para_3d_default_layout" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_vol_layout_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_vol_tint_spinner"
        customSpinner:entries="@array/volume_layout"/>

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_vol_rotation_spinner"
        android:text="@string/para_3d_quick_rotation" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_vol_rotation_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_vol_layout_spinner"
        customSpinner:entries="@array/volume_quick_rotation"/>

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_vol_smooth_spinner"
        android:text="@string/para_3d_vol_smooth_full" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_vol_smooth_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_vol_rotation_spinner"
        customSpinner:entries="@array/volume_smooth"/>

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_3d_vol_cut_tool_spinner"
        android:text="@string/para_3d_cut_tool" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_3d_vol_cut_tool_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_3d_image_type_spinner"
        android:layout_below="@+id/preset_3d_vol_smooth_spinner"
        customSpinner:entries="@array/volume_cut_tool"/>
</RelativeLayout>
