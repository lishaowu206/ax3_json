<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <TextView
        style="@style/report_measure_title_text_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="@string/report_growth_curve_fetus_compare"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:gravity="left|center_vertical"
        android:layout_marginBottom="2dp"/>

    <TextView
        style="@style/report_measure_title_text_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/report_worksheet_fetus_a"
        android:layout_margin="2dp"/>

    <TextView
        style="@style/report_measure_title_text_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/report_worksheet_fetus_b"
        android:layout_margin="2dp"/>

    <TextView
        style="@style/report_measure_title_text_style"
        android:id="@+id/fetus_c_head_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/report_worksheet_fetus_c"
        android:visibility="invisible"
        android:layout_margin="2dp"/>

    <TextView
        style="@style/report_measure_title_text_style"
        android:id="@+id/fetus_d_head_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/report_worksheet_fetus_d"
        android:visibility="invisible"
        android:layout_margin="2dp"/>

    <!--占位-->
    <TextView
        style="@style/report_measure_title_text_style"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"/>

</LinearLayout>