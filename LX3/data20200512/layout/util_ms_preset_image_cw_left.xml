<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customSpinner="http://schemas.android.com/apk/res-auto"
    android:layout_width="530dp"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:background="@color/main_screen_tab_content_bg"
    android:paddingBottom="20dp"
    android:paddingEnd="40dp"
    android:paddingStart="20dp"
    android:paddingTop="20dp">

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_flow_type_spinner"
        android:text="@string/para_flow_type" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_flow_type_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        customSpinner:entries="@array/image_preset_flow_type_options" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_sweep_speed_spinner"
        android:text="@string/para_sweep_speed_full" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_sweep_speed_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_flow_type_spinner"
        customSpinner:entries="@array/sweep_speed_options" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_baseline_spinner"
        android:text="@string/para_baseline" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_baseline_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_sweep_speed_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_angle_correct_spinner"
        android:text="@string/para_d_angle_correct_full" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_angle_correct_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_baseline_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_invert_check"
        android:text="@string/para_invert" />

    <CheckBox
        android:id="@+id/preset_cw_invert_check"
        style="@style/utility_preset_image_check_box"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_angle_correct_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_sound_volume_spinner"
        android:text="@string/para_d_volume_full" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_sound_volume_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_invert_check" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_tint_spinner"
        android:text="@string/para_tint" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_tint_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_sound_volume_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_colorize_check"
        android:text="@string/para_colorize" />

    <CheckBox
        android:id="@+id/preset_cw_colorize_check"
        style="@style/utility_preset_image_check_box"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_tint_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_strip_size_spinner"
        android:text="@string/para_strip_size_full" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_strip_size_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_colorize_check"
        customSpinner:entries="@array/strip_size_options" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_cw_map_spinner"
        android:text="@string/para_gray_map" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_cw_map_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_cw_flow_type_spinner"
        android:layout_below="@+id/preset_cw_strip_size_spinner"
        customSpinner:entries="@array/image_preset_gray_map_options"/>
</RelativeLayout>
