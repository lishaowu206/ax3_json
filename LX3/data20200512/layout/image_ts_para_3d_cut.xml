<?xml version="1.0" encoding="utf-8"?>
<edan.am57.bx4.image.view.parameter.Parameter3DCutLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/touch_screen_tab_content_bg"
    android:orientation="vertical">

    <edan.am57.bx4.common.widget.GridRadioGroup
        android:id="@+id/vol_mode_cut_type_grp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_ts_padding_buttons_top"
        android:layout_marginStart="@dimen/image_ts_padding_left"
        android:columnCount="4"
        android:rowCount="1">

        <RadioButton
            android:id="@+id/vol_mode_cut_type_trace_in_rbn"
            style="@style/touch_screen_on_off_button"
            android:layout_column="0"
            android:layout_row="0"
            android:checked="true"
            android:text="@string/para_3d_cut_tool_trace_in"/>

        <RadioButton
            android:id="@+id/vol_mode_cut_type_trace_out_rbn"
            style="@style/touch_screen_on_off_button"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginStart="@dimen/image_ts_button_spacing_horizontal"
            android:text="@string/para_3d_cut_tool_trace_out"/>

        <RadioButton
            android:id="@+id/vol_mode_cut_type_box_in_rbn"
            style="@style/touch_screen_on_off_button"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_marginStart="@dimen/image_ts_button_spacing_horizontal"
            android:text="@string/para_3d_cut_tool_box_in"/>

        <RadioButton
            android:id="@+id/vol_mode_cut_type_box_out_rbn"
            style="@style/touch_screen_on_off_button"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_marginStart="@dimen/image_ts_button_spacing_horizontal"
            android:text="@string/para_3d_cut_tool_box_out"/>

        <RadioButton
            android:id="@+id/vol_mode_cut_type_eraser_big_rbn"
            style="@style/touch_screen_on_off_button"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginTop="@dimen/image_ts_button_spacing_vertical"
            android:text="@string/para_3d_cut_tool_erase_big" />

        <RadioButton
            android:id="@+id/vol_mode_cut_type_eraser_small_rbn"
            style="@style/touch_screen_on_off_button"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginStart="@dimen/image_ts_button_spacing_horizontal"
            android:layout_marginTop="@dimen/image_ts_button_spacing_vertical"
            android:text="@string/para_3d_cut_tool_erase_small"/>

    </edan.am57.bx4.common.widget.GridRadioGroup>

    <Button
        android:id="@+id/vol_mode_cut_undo_tbn"
        style="@style/touch_screen_oneshot_button"
        android:layout_alignStart="@+id/vol_mode_cut_type_grp"
        android:layout_below="@+id/vol_mode_cut_type_grp"
        android:layout_marginTop="@dimen/image_ts_button_spacing_vertical"
        android:text="@string/para_3d_cut_tool_undo"/>

    <Button
        android:id="@+id/vol_mode_cut_redo_tbn"
        style="@style/touch_screen_oneshot_button"
        android:layout_alignTop="@+id/vol_mode_cut_undo_tbn"
        android:layout_toEndOf="@+id/vol_mode_cut_undo_tbn"
        android:layout_marginStart="@dimen/image_ts_button_spacing_horizontal"
        android:text="@string/para_3d_cut_tool_redo"/>

    <Button
        android:id="@+id/vol_mode_cut_clear_tbn"
        style="@style/touch_screen_oneshot_button"
        android:layout_alignTop="@+id/vol_mode_cut_redo_tbn"
        android:layout_toEndOf="@+id/vol_mode_cut_redo_tbn"
        android:layout_marginStart="@dimen/image_ts_button_spacing_horizontal"
        android:text="@string/para_3d_cut_tool_undo_all"/>

    <Button
        android:id="@+id/vol_mode_cut_exit_tbn"
        style="@style/touch_screen_oneshot_button"
        android:layout_alignTop="@+id/vol_mode_cut_clear_tbn"
        android:layout_toEndOf="@+id/vol_mode_cut_clear_tbn"
        android:layout_marginStart="@dimen/image_ts_button_spacing_horizontal"
        android:text="@string/common_exit"/>

</edan.am57.bx4.image.view.parameter.Parameter3DCutLayout>
