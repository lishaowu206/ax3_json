<?xml version="1.0" encoding="utf-8"?>
<!--mini report测量或计算结果expand list view区域,包含上下翻页按钮(各占一行测量结果的高度)-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/minireport_page_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/measure_ms_mini_report_items_height"
        android:contentDescription="@null"
        android:visibility="gone"/>

    <edan.am57.bx4.measurement.minireport.CustomExpandableListView
        android:id="@+id/minireport_expandlistview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#050505"
        android:dividerHeight="1dp"
        android:childDivider="#050505"
        android:scrollbars="none"
        android:transcriptMode="alwaysScroll"/>

    <ImageButton
        android:id="@+id/minireport_page_down"
        android:layout_width="match_parent"
        android:layout_height="@dimen/measure_ms_mini_report_items_height"
        android:contentDescription="@null"
        android:layout_marginTop="2dp"
        android:visibility="gone"/>
</LinearLayout>