<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/lighter_blue_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/wireless_connect_status_tv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/blue_background"/>
    
    <TextView
        android:id="@+id/wire_selected_status_tv"
        android:layout_width="162dp"
        android:layout_height="30dp"
        android:singleLine="true"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_marginStart="4dp"
        android:ellipsize="end"
        android:maxEms="20"
        android:textSize="16sp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/blue_background"/>

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/wireless_lock_iv"
            android:layout_width="18dp"
            android:layout_height="14dp"
            android:src="@drawable/status_wifi_lock"/>

    </RelativeLayout>



    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/blue_background"/>

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/wireless_signal_strength_iv"
            android:layout_width="27.5dp"
            android:layout_height="15dp"
            android:src="@drawable/status_wifi_med"/>

    </RelativeLayout>

</LinearLayout>