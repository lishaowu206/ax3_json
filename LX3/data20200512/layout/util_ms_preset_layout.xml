<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/utility_dlg_layout_style"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/view_divider"
        android:layout_width="1dp"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent"
        android:background="@color/measure_mini_report_sep"
        android:visibility="visible"/>
    <View
        android:layout_width="1dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent"
        android:background="@color/measure_mini_report_sep"
        android:visibility="visible"/>

    <include
        layout="@layout/util_ms_util_top_layout"/>

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/util_ms_bottom_area"
        android:layout_below="@+id/util_ms_top_area">

        <TextView
            style="@style/utility_title_text_style"
            android:id="@+id/main_screen_preset_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/feature_preset"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/main_screen_preset_title">

            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/preset_exam_btn"
                android:layout_centerHorizontal="true"
                android:text="@string/feature_exam"/>

            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/preset_image_btn"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/preset_exam_btn"
                android:text="@string/feature_image"/>

            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/preset_comment_btn"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/preset_image_btn"
                android:text="@string/feature_comment"/>

            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/preset_bodymark_btn"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/preset_comment_btn"
                android:text="@string/feature_body_mark"/>

            <Button
                style="@style/main_screen_utility_function_button_style"
                android:id="@+id/preset_measure_btn"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/preset_bodymark_btn"
                android:text="@string/feature_measure"/>
        </RelativeLayout>

    </RelativeLayout>

    <include layout="@layout/util_ms_util_bottom_layout"/>

</RelativeLayout>
