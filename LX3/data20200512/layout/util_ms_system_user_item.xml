<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:focusable="false"
    android:background="@color/main_screen_listview_head_bg"
    android:orientation="horizontal">

    <View
        style="@style/main_screen_list_view_divider_style"/>

    <TextView
        style="@style/main_screen_list_view_title_style"
        android:id="@+id/sytem_user_item_flg"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:enabled="true"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />


    <TextView
        style="@style/main_screen_list_view_title_style"
        android:id="@+id/sytem_user_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_weight="5"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/demo_name" />
    <View
        style="@style/main_screen_list_view_divider_style"/>

    <TextView
        style="@style/main_screen_list_view_title_style"
        android:id="@+id/sytem_user_item_type"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:text="@string/user_type" />
    <View
        android:id="@+id/sytem_user_name_silder"
        style="@style/main_screen_list_view_divider_style"/>
</LinearLayout>