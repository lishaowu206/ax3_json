<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customSpinner="http://schemas.android.com/apk/res-auto"
    android:layout_width="530dp"
    android:layout_height="match_parent"
    android:background="@color/main_screen_tab_content_bg"
    android:layout_alignParentEnd="true"
    android:paddingBottom="20dp"
    android:paddingEnd="40dp"
    android:paddingStart="20dp"
    android:paddingTop="20dp">

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_image_type_spinner"
        android:text="@string/para_b_image_type" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_b_image_type_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        customSpinner:entries="@array/image_preset_b_image_type_options" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_tint_spinner"
        android:text="@string/para_tint" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_b_tint_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_image_type_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_colorize_check"
        android:text="@string/para_colorize" />

    <CheckBox
        android:id="@+id/preset_b_colorize_check"
        style="@style/utility_preset_image_check_box"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_tint_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_depth_spinner"
        android:text="@string/para_b_depth" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_b_depth_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_colorize_check" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_lr_invert_check"
        android:text="@string/para_b_lr_invert_full" />

    <CheckBox
        android:id="@+id/preset_b_lr_invert_check"
        style="@style/utility_preset_image_check_box"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_depth_spinner" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_ud_invert_check"
        android:text="@string/para_b_ud_invert_full" />

    <CheckBox
        android:id="@+id/preset_b_ud_invert_check"
        style="@style/utility_preset_image_check_box"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_lr_invert_check" />

    <TextView
        android:id="@+id/preset_b_trapezoid_text"
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_trapezoid_check"
        android:text="@string/para_b_trapezoid" />

    <CheckBox
        android:id="@+id/preset_b_trapezoid_check"
        style="@style/utility_preset_image_check_box"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_ud_invert_check" />

    <TextView
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_fov_spinner"
        android:text="@string/para_b_scan_angle" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_b_fov_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_trapezoid_check"
        customSpinner:entries="@array/scan_angle_options" />

    <TextView
        android:id="@+id/preset_b_steer_text"
        style="@style/utility_preset_image_text"
        android:layout_alignBottom="@+id/preset_b_steer_spinner"
        android:text="@string/para_steer_angle" />

    <edan.am57.bx4.common.widget.CustomSpinner
        android:id="@+id/preset_b_steer_spinner"
        style="@style/utility_preset_image_spinner"
        android:layout_alignStart="@+id/preset_b_image_type_spinner"
        android:layout_below="@+id/preset_b_fov_spinner" />
</RelativeLayout>
