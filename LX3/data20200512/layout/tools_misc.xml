<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/simulator_key_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="350dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:background="@color/black"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/debug_area2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/debug_area">
        <Button
            android:id="@+id/hard_key_start_capture_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/key_toggle_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tools_capture_start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/hard_key_stop_capture_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/key_toggle_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tools_capture_stop"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/tools_screenshot_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/key_toggle_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tools_screenshot"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/tools_save_overlay_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/key_toggle_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tools_overlay_save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/tools_load_overlay_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/key_toggle_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tools_overlay_load"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <ToggleButton
            android:id="@+id/tools_display_overlay_tbn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/key_toggle_selector"
            android:button="@null"
            android:gravity="center"
            android:textOn="@string/tools_overlay_display_on"
            android:textOff="@string/tools_overlay_display_off"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/debug_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/hard_key_power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/key_toggle_selector"
            android:button="@null"
            android:gravity="center"
            android:text="@string/tools_power"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>