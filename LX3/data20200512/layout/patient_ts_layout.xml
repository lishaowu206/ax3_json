<edan.am57.bx4.patient.TsPatientRegLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/patient_ts_padding_bottom"
    android:paddingEnd="@dimen/patient_ts_padding_right"
    android:paddingStart="@dimen/patient_ts_padding_left"
    android:paddingTop="@dimen/patient_ts_padding_top">

    <Button
        android:id="@+id/btn_clear"
        style="@style/touch_screen_oneshot_button"
        android:layout_height="@dimen/touch_screen_button_small_height"
        android:layout_alignBottom="@+id/btn_start_exam"
        android:layout_marginStart="@dimen/patient_ts_spacing_horizontal"
        android:layout_toStartOf="@+id/btn_cancel"
        android:text="@string/common_clear_all" />

    <Button
        android:id="@+id/btn_start_exam"
        style="@style/touch_screen_oneshot_button"
        android:layout_height="@dimen/touch_screen_button_small_height"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_clear"
        android:text="@string/common_ok" />
    <Button
        android:id="@+id/btn_cancel"
        style="@style/touch_screen_oneshot_button"
        android:layout_height="@dimen/touch_screen_button_small_height"
        android:layout_alignBottom="@+id/btn_start_exam"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/patient_ts_spacing_horizontal"
        android:background="@drawable/btn_oneshot_selector"
        android:text="@string/common_cancel" />
</edan.am57.bx4.patient.TsPatientRegLayout>