<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/util_ts_lcd_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/util_ts_lcd_gain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/maintenance_tool_lcd_optGain"
            android:textSize="@dimen/touch_screen_button_text_size"/>
        <TextView
            android:id="@+id/util_ts_lcd_set_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/maintenance_tool_lcd_optSet"
            android:textSize="@dimen/touch_screen_button_text_size"/>
    </LinearLayout>

</RelativeLayout>
