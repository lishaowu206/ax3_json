<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ScrollBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <edan.am57.bx4.common.ViewWithScrollBar.ScrollBarWithIndicator
        android:id="@+id/scrollbarwithindicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        ScrollBar:bar_orentation="VERTICAL"
        ScrollBar:bar_size="40dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/scrollbarwithindicator"
        android:scrollbars="none"></android.support.v7.widget.RecyclerView>

</RelativeLayout>