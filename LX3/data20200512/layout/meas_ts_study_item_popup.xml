<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/measure_folder_content_bg"
    android:orientation="vertical">

<!--    android:layout_marginBottom="@dimen/measure_ts_study_folder_margin_vertical"
    android:layout_marginEnd="@dimen/measure_ts_study_folder_margin_horizontal"
    android:layout_marginStart="@dimen/measure_ts_study_folder_margin_horizontal"
    android:layout_marginTop="@dimen/measure_ts_study_folder_margin_vertical"
-->

    <TextView
        android:id="@+id/stduyName"
        android:layout_width="@dimen/touch_screen_tabs_width"
        android:layout_height="@dimen/touch_screen_tabs_height"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/touch_screen_tab_text_size"
        android:background="@drawable/measure_folder_item_label"
    />

    <edan.am57.bx4.measurement.Layout.StudyItemGridLayout
        android:id="@+id/study_sub_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/exit_study_item_dialog"
        android:layout_below="@+id/stduyName"
        android:layout_marginBottom="@dimen/measure_ts_study_items_margin_end"
        android:layout_marginStart="@dimen/measure_ts_study_folder_padding_left"
        android:layout_marginTop="@dimen/measure_ts_study_folder_padding_top"
        android:columnCount="4"
        android:rowCount="3">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_marginBottom="@dimen/measure_ts_study_items_spacing_vertical"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_rowWeight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="3"
            android:layout_marginEnd="@dimen/measure_ts_study_items_spacing_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"/>
    </edan.am57.bx4.measurement.Layout.StudyItemGridLayout>

    <Button
        android:id="@+id/exit_study_item_dialog"
        style="@style/touch_screen_oneshot_button"
        android:layout_height="@dimen/touch_screen_button_small_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/measure_ts_study_folder_padding_bottom"
        android:layout_marginEnd="@dimen/measure_ts_study_folder_padding_right"
        android:text="@string/common_exit"/>
</RelativeLayout>