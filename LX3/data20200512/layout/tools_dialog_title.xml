<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tools_dialog_close_btn"
        android:layout_alignParentStart="true"
        android:scaleType="fitStart"
        android:src="@drawable/tools_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@null"/>
    <TextView
        android:id="@+id/tools_dialog_title_tv"
        android:gravity="center"
        style="@android:style/TextAppearance.DialogWindowTitle"
        android:layout_toEndOf="@+id/tools_dialog_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</RelativeLayout>