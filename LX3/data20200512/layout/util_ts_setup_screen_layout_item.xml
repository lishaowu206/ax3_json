        <!--android:layout_width="500dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:paddingTop="30dp"-->
        <!--android:paddingBottom="30dp"-->
        <!--android:gravity="center"-->
        <!--android:max="99"-->
        <!--android:progress="35"-->
        <!--android:maxHeight="2dp"-->
        <!--android:progressDrawable="@drawable/btn_oneshot_selector"-->
        <!--android:thumb="@drawable/image_tgc_bar_thumb"-->
        <!--android:thumbOffset="0dp" />-->

    <Button
        android:id="@+id/util_ts_screen_item_right_btn"
        android:layout_width="@dimen/setup_screen_ts_seek_bar_button_touch_size"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@drawable/screen_setup_seek_bar_button_selector"
        android:text="+"
        android:layout_marginTop="@dimen/setup_screen_ts_seek_bar_spacing_vertical"
        android:textColor="@color/touch_screen_btn_text"
        android:textSize="@dimen/touch_screen_button_text_size"
        tools:ignore="HardcodedText"/>

</RelativeLayout>
