<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:EditRegion="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <edan.am57.bx4.common.widget.RegionNumberEditText
        style="@style/general_edit_style"
        android:id="@+id/ip_first"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLength="3"
        android:inputType="number"
        android:background="@null"
        EditRegion:MaxNumber="255"
        EditRegion:MinNumber="0"
        EditRegion:ShotTips="false"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        tools:ignore="HardcodedText"/>

    <edan.am57.bx4.common.widget.RegionNumberEditText
        style="@style/general_edit_style"
        android:id="@+id/ip_second"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@null"
        android:maxLength="3"
        EditRegion:MaxNumber="255"
        EditRegion:MinNumber="0"
        android:inputType="number"
        EditRegion:ShotTips="false"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        tools:ignore="HardcodedText"/>

    <edan.am57.bx4.common.widget.RegionNumberEditText
        style="@style/general_edit_style"
        android:id="@+id/ip_third"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@null"
        android:maxLength="3"
        EditRegion:MaxNumber="255"
        EditRegion:MinNumber="0"
        android:inputType="number"
        EditRegion:ShotTips="false"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        tools:ignore="HardcodedText"/>

    <edan.am57.bx4.common.widget.RegionNumberEditText
        style="@style/general_edit_style"
        android:id="@+id/ip_fourth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@null"
        android:maxLength="3"
        EditRegion:MaxNumber="255"
        EditRegion:MinNumber="0"
        android:inputType="number"
        EditRegion:ShotTips="false"
        android:text=""/>
</merge>
