<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/main_screen_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/dialog_hint"/>

    <TextView
        style="@style/main_screen_text_style"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/dialog_hint"
        android:layout_alignStart="@+id/dialog_hint"
        android:layout_marginTop="30dp"
        android:id="@+id/destination"
        android:visibility="gone"/>

    <!--android:layout_alignTop="@+id/destination"
    android:layout_toEndOf="@+id/destination"-->

    <edan.am57.bx4.common.widget.CustomSpinner
        style="@style/main_screen_spinner_style"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:gravity="center_vertical"
        android:id="@+id/path_select_custom_spinner"
        android:layout_below="@+id/dialog_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/dialog_left_btn"
        android:layout_width="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="16dp"/>

    <Button
        style="@style/main_screen_oneshot_small_button"
        android:id="@+id/dialog_right_btn"
        android:text="@string/common_cancel"
        android:layout_width="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>